{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [],
    "templateParts": [],
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultGradients": true,
            "defaultPalette": true,
            "palette": [
                {
                    "slug": "pp-primary",
                    "color": "#2c86f9",
                    "name": "PP Primary Blue"
                },
                {
                    "slug": "pp-primary-dark",
                    "color": "#1e6ee8",
                    "name": "PP Primary Dark"
                },
                {
                    "slug": "pp-primary-light",
                    "color": "#5aa3fb",
                    "name": "PP Primary Light"
                },
                {
                    "slug": "pp-secondary",
                    "color": "#0f172a",
                    "name": "PP Secondary Dark"
                },
                {
                    "slug": "pp-accent",
                    "color": "#10b981",
                    "name": "PP Success Green"
                },
                {
                    "slug": "pp-warning",
                    "color": "#f59e0b",
                    "name": "PP Warning Orange"
                },
                {
                    "slug": "pp-danger",
                    "color": "#ef4444",
                    "name": "PP Danger Red"
                },
                {
                    "slug": "pp-white",
                    "color": "#ffffff",
                    "name": "PP White"
                },
                {
                    "slug": "pp-gray-50",
                    "color": "#f8fafc",
                    "name": "PP Gray 50"
                },
                {
                    "slug": "pp-gray-100",
                    "color": "#f1f5f9",
                    "name": "PP Gray 100"
                },
                {
                    "slug": "pp-gray-500",
                    "color": "#64748b",
                    "name": "PP Gray 500"
                },
                {
                    "slug": "pp-gray-900",
                    "color": "#0f172a",
                    "name": "PP Gray 900"
                }
            ],
            "gradients": [
                {
                    "slug": "pp-primary-gradient",
                    "gradient": "linear-gradient(135deg, #2c86f9 0%, #1e6ee8 100%)",
                    "name": "PP Primary Gradient"
                },
                {
                    "slug": "pp-hero-gradient",
                    "gradient": "linear-gradient(135deg, #f8fafc 0%, #fff 50%, #f0f9ff 100%)",
                    "name": "PP Hero Background"
                },
                {
                    "slug": "pp-service-gradient",
                    "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
                    "name": "PP Service Gradient"
                }
            ]
        },
        "typography": {
            "custom": true,
            "customFontSize": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "1rem",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "1.125rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "hero-title",
                    "size": "clamp(2.5rem, 5vw, 4rem)",
                    "name": "Hero Title"
                },
                {
                    "slug": "section-title",
                    "size": "clamp(2rem, 4vw, 3rem)",
                    "name": "Section Title"
                }
            ],
            "fontFamilies": [
                {
                    "slug": "pp-primary",
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "PP Primary (Inter)"
                },
                {
                    "slug": "pp-heading",
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "PP Headings (Inter)"
                }
            ]
        },
        "spacing": {
            "custom": true,
            "customSpacingSize": true,
            "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
                {
                    "size": "0.5rem",
                    "slug": "10",
                    "name": "1"
                },
                {
                    "size": "1rem",
                    "slug": "20",
                    "name": "2"
                },
                {
                    "size": "1.5rem",
                    "slug": "30",
                    "name": "3"
                },
                {
                    "size": "2rem",
                    "slug": "40",
                    "name": "4"
                },
                {
                    "size": "3rem",
                    "slug": "50",
                    "name": "5"
                },
                {
                    "size": "4rem",
                    "slug": "60",
                    "name": "6"
                },
                {
                    "size": "5rem",
                    "slug": "70",
                    "name": "7"
                },
                {
                    "size": "6rem",
                    "slug": "80",
                    "name": "8"
                }
            ],
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "border": {
            "custom": true,
            "customColor": true,
            "customRadius": true,
            "customStyle": true,
            "customWidth": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "dimensions": {
            "minHeight": true
        },
        "position": {
            "sticky": true
        },
        "layout": {
            "contentSize": "1280px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--pp-gray-50)",
            "text": "var(--wp--preset--color--pp-gray-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--pp-primary)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.7"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--hero-title)",
                    "fontWeight": "800",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.02em"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--section-title)",
                    "fontWeight": "700",
                    "lineHeight": "1.3",
                    "letterSpacing": "-0.01em"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pp-heading)",
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "fontWeight": "600"
                },
                "color": {
                    "text": "var(--wp--preset--color--pp-gray-900)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--pp-primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--pp-primary-dark)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--gradient--pp-primary-gradient)",
                    "text": "var(--wp--preset--color--pp-white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "12px"
                },
                "spacing": {
                    "padding": {
                        "top": "16px",
                        "right": "32px",
                        "bottom": "16px",
                        "left": "32px"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--pp-primary-dark)"
                    }
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--gradient--pp-primary-gradient)",
                    "text": "var(--wp--preset--color--pp-white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "12px"
                },
                "spacing": {
                    "padding": {
                        "top": "16px",
                        "right": "32px",
                        "bottom": "16px",
                        "left": "32px"
                    }
                }
            },
            "core/buttons": {
                "spacing": {
                    "blockGap": "1rem"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "0px",
                        "right": "0px",
                        "bottom": "0px",
                        "left": "0px"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "blockGap": "2rem"
                }
            },
            "core/column": {
                "spacing": {
                    "blockGap": "1rem"
                }
            },
            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.7"
                }
            },
            "core/quote": {
                "color": {
                    "background": "var(--wp--preset--color--pp-gray-50)"
                },
                "border": {
                    "color": "var(--wp--preset--color--pp-primary)",
                    "style": "solid",
                    "width": "0 0 0 4px"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "right": "1.5rem",
                        "bottom": "1rem",
                        "left": "1.5rem"
                    }
                }
            }
        }
    }
}